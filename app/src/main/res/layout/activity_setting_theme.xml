<?xml version="1.0" encoding="utf-8"?>
<com.zjyang.mvpframe.ui.view.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:left_btn_src="@drawable/ic_close_black"
    app:left_btn_visible="true"
    app:title_text="@string/change_theme"
    app:title_visible="true"
    app:shader_visible="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        <ImageView
            android:id="@+id/yellow_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"/>
        <ImageView
            android:id="@+id/blue_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"/>
        <ImageView
            android:id="@+id/red_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"/>
        <ImageView
            android:id="@+id/orange_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"/>
    </LinearLayout>
</com.zjyang.mvpframe.ui.view.CustomToolBar>