<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:right_tv_text=""
    app:right_tv_visible="true"
    app:title_text="@string/app_name"
    app:title_visible="true"
    app:shader_visible="false">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/trip_info_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

    </android.support.v7.widget.RecyclerView>


    <View
        android:id="@+id/tool_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/yellow"
        />

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/search_entrance"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <ImageView
                android:id="@+id/search_iv"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_search"/>
            <TextView
                android:id="@+id/search_entrance_tv"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/search_iv"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:textSize="14sp"
                android:textColor="@color/text_color_gray"
                android:text="搜索关键词"/>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>