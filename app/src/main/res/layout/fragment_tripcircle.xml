<?xml version="1.0" encoding="utf-8"?>
<com.zjyang.mvpframe.ui.view.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:title_text="@string/message_tab_name"
    app:title_visible="true"
    app:shader_visible="true">

    <com.zjyang.mvpframe.module.home.tripcircle.view.BannerViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#000000">

    </com.zjyang.mvpframe.module.home.tripcircle.view.BannerViewPager>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/primary_text_color"
        android:textSize="18sp"
        android:text="每日精选"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/wonderful_video_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

    </android.support.v7.widget.RecyclerView>


</com.zjyang.mvpframe.ui.view.CustomToolBar>