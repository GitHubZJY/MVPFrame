<?xml version="1.0" encoding="utf-8"?>
<com.zjyang.mvpframe.ui.view.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:right_tv_text="Sigh Up"
    app:right_tv_visible="true"
    app:left_btn_visible="true"
    app:shader_visible="false"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SHOW YOUR BEAUTY TRIP"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <include
                android:id="@+id/input_layout"
                android:layout_width="match_parent"
                android:layout_height="130dip"
                layout="@layout/layout_login_input" />

            <include
                android:id="@+id/layout_progress"
                android:layout_width="match_parent"
                android:layout_height="130dip"
                layout="@layout/layout_progress"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/login_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_below="@+id/input_layout"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dip"
                android:src="@drawable/ic_login"
                />
        </RelativeLayout>
    </RelativeLayout>





</com.zjyang.mvpframe.ui.view.CustomToolBar>